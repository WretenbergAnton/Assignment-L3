<div class="auth-wrap">
  <div class="auth-card">
    <div class="auth-badge">
      <img src="/images/hantel.png" alt="hantel" class="badge-icon-img" />
    </div>

    <h1 class="auth-title">Create your account</h1>

    <% if (typeof error !== "undefined") { %>
      <p style="color: #ff6b6b; font-weight: bold; margin-bottom: 1rem;">
        <%= error %>
      </p>
    <% } %>

    <form class="auth-form" action="/api/v1/auth/sign-up" method="post">
      <label class="auth-label">Full name
        <input class="auth-input" name="username" placeholder="Your full name" required minlength="2" />
      </label>

      <label class="auth-label">Email address
        <input class="auth-input" type="email" name="email" placeholder="Your email address" required />
      </label>

      <label class="auth-label">Password
        <input class="auth-input" type="password" name="password" placeholder="Choose a password" minlength="6" required />
      </label>

      <button class="auth-btn" type="submit">Sign up</button>
    </form>

    <p class="auth-meta">
      Already have an account? <a href="/login">Login</a>
    </p>
  </div>
</div>